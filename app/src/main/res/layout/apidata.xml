<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/decisionContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/decisionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Decision"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:layout_weight="0.35"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:layout_weight="0.05"/>

        <EditText
            android:id="@+id/record2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_weight="0.6">


        </EditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/limit_Container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/limit_Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:text="Limit"
            android:textSize="15sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:layout_weight="0.05"/>

        <EditText
            android:id="@+id/record1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:ems="10"
            android:cursorVisible="false"
            android:inputType="number" >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/count_Container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:textColor="@color/colorPrimary"
            android:text="Count "
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:layout_weight="0.05"/>

        <EditText
            android:id="@+id/record3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="textPostalAddress" >


        </EditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/interval_Container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/intervalTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="Interval "
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_margin="5dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:layout_weight="0.05"/>

        <EditText
            android:id="@+id/record4"
            android:layout_width="0dp"
            android:cursorVisible="false"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:ems="10"
            android:inputType="textPostalAddress" >


        </EditText>

    </LinearLayout>

</LinearLayout>
